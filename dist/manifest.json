{
    "name": "Your Web App", // Full name of the web app
    "short_name": "WebApp", // Shorter name for the app
    "start_url": "/", // Start URL when the app is launched
    "display": "standalone", // Display mode, making the app look more like a native app
    "background_color": "#ffffff", // Background color for the splash screen
    "theme_color": "#000000", // Color of the app's theme (affects the status bar on mobile devices)
    "icons": [
        {
            "src": "/icons/icon-192x192.png", // Path to the icon file
            "type": "image/png", // File type of the icon
            "sizes": "192x192" // Size of the icon
        },
        {
            "src": "/icons/icon-512x512.png",
            "type": "image/png",
            "sizes": "512x512"
        }
    ]
}